<script>

const header = document.getElementById('header');
let isHeaderFixed = false;

window.addEventListener('scroll', () => {
    const scrollPosition = window.scrollY;
    const section = document.getElementById('voltailha');

    if (section) {
        const sectionPosition = section.offsetTop;

        if (scrollPosition >= sectionPosition && !isHeaderFixed) {
            header?.classList.add('fixed', 'bg-shape', 'transition-all', 'duration-500');
            header?.classList.remove('absolute');
            isHeaderFixed = true;
        } else if (scrollPosition < sectionPosition && isHeaderFixed) {
            header?.classList.remove('fixed', 'bg-shape');
            header?.classList.add('absolute',);
            isHeaderFixed = false;
        }
    }
});





</script>
