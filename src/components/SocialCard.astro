---
interface Props {
  image: string;
	title: string;
	paragraph: string;
}

const {title, paragraph, image} = Astro.props;
---

<div class="flex flex-col"> 
  <div class="grid h-72 bg-cover bg-center" style={{backgroundImage: `url('/images/${image}')`}}>
  </div>

  <div class="bg-white text-text flex flex-col py-6 px-6 gap-6 shadow-md">
    <div>
      <h1 class="text-2xl font-bold text-orange border-b border-orange w-36">{title}</h1>
    </div>
    <p class="font-light font-roboto">{paragraph}</p>
  </div>

</div>
