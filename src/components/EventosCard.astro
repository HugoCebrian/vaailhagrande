---
interface Props {
  data: string;
	title: string;
	link: string;
  image: string;
}

const {title, link, data, image} = Astro.props;
---

<div class="flex flex-col gap-4 w-full shadow-xl hidden"> 
  <div class="grid h-80 bg-cover bg-center" style={{backgroundImage: `url('/images/${image}')`}}>

    <div class="self-start place-self-end p-2 px-4 bg-orange font-semibold font-roboto text-sm">{data}</div>
    <div class="self-end flex">
      <div class="text-white bg-black/60 w-auto flex-grow p-2 py-4 px-4 font-semibold">{title}</div>
      <div class="text-white bg-orange w-[38px] p-2 py-2 flex items-center justify-center text-2xl">
        <a class=" flex justify-center items-center text-[1.2rem]" href={link}>
          <i class=" fa-solid fa-chevron-right"></i>
        </a>
      </div>
    </div>
  </div>

</div>


<div class="flex flex-col gap-4 w-full shadow-xl group hidden"> 
