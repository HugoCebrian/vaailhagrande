---
interface Props {
  data: string;
	title: string;
	link: string;
  image: string;
}

const {title, link, data, image} = Astro.props;
---

<div class="flex flex-col gap-4"> 
  <div class="grid h-80 bg-cover bg-center" style={{backgroundImage: `url('/images/${image}')`}}>

    <div class="self-start place-self-end m-4 p-2 px-4 bg-green font-semibold font-roboto">{data}</div>
    <div class="self-end flex">
      <div class="text-shape bg-white w-10/12 p-2 py-3 px-4 font-bold">{title}</div>
      <div class="text-white bg-green w-2/12 p-2 py-2 flex items-center justify-center text-2xl">
        <a class=" flex justify-center items-center" href={link}><i class=" fa-solid fa-chevron-right"></i></a>
      </div>
    </div>
  </div>

</div>
